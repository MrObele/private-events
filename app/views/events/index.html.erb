<h1> 
All Events <% if @events.any? %> (<%= @events.count %>) <%end%>
</h1>

<h2>Past Events</h2>
   <div class = "table-responsive">
   <table class = "table table-striped table-bordered">
   <thead>
   <tr>
   <th>Description</th>
   <th>Location</th>
   <th>Date</th>
   </tr>
   </thead>
   <tbody>
   <% @events.past.each do |event| %>
   <tr>
   <td><%= link_to "#{event.description}", event %></td>
   <td><%= event.location%></td>
   <td><%= event.date %></td>
   </tr>
   <% end %>
   </tbody>
   </table>
  </div>


<h2>Upcoming Events</h2>
<div class = "table-responsive">
   <table class = "table table-striped table-bordered">
   <thead>
   <tr>
   <th>Description</th>
   <th>Location</th>
   <th>Date</th>
   </tr>
   </thead>
   <tbody>
   <% @events.upcoming.each do |event| %>
   <tr>
   <td><%= link_to "#{event.description}", event %></td>
   <td><%= event.location%></td>
   <td><%= event.date %></td>
   </tr>
   <% end %>
   </tbody>
   </table>
  </div>