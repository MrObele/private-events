<h1> 
All Events <% if @events.any? %> (<%= @events.count %>) <%end%>
</h1>

<h2>Past Events</h2>
<% @events.past.each do |event| %>
  <div>
    <h3>
    Description: <%= event.description%>
    </h3>
    <p>
    Location: <%= event.location%>
    </p>
    <p>
    Date: <%= event.date %>
    </p>
  </div>
<% end %>

<h2>Upcoming Events</h2>
<% @events.upcoming.each do |event| %>
  <div>
    <h3>
    Description: <%= event.description%>
    </h3>
    <p>
    Location: <%= event.location%>
    </p>
    <p>
    Date: <%= event.date %>
    </p>
  </div>
<% end %>
