<% if logged_in? %>
<h1>Current User is : <%= current_user.name %></h1>
<% end %>
<h1> <%= @user.name %> </h1>
<p><%= @user.email  %> </p> 
<h2>Organized Events</h2>
<% if @user.organized_events.any? %>
<% @user.organized_events.each do |event| %>
    <p> <%= event.description %></p>
    <p> <%= event.location %></p>
    <p> <%= event.date %></p>
<% end %>
<% end %>


<h2>Upcoming Events</h2>
<% if  @upcoming_events.any? %>
<% @upcoming_events.each do |event| %>
    <p> <%= event.description %></p>
    <p> <%= event.location %></p>
    <p> <%= event.date %></p>
<% end %>
<% end %>

<h2>Past Events</h2>
<% if @prev_events.any? %>
<% @prev_events.each do |event| %>
    <p> <%= event.description %></p>
    <p> <%= event.location %></p>
    <p> <%= event.date %></p>
<% end %>
<% end %>

