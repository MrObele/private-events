<h1>Sign Up</h1>
  <div class="row">
      <div class="col-md-8 col-md-offset-2">
         <%= form_for (@user) do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.label :email %>
            <%= f.text_field :email %>
            <%= f.label :password %>
            <%= f.password_field :password %>
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>
            <%= f.submit "Sign Up" %>
            <% end %>
      </div>
</div>

